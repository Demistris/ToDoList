@page "/register"
@using ToDoListProject.Services
@inject NavigationService Navigation
@inject ApiService ApiService

<h3>Register</h3>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger">@_errorMessage</div>
}

<EditForm Model="@_registerModel" OnValidSubmit="HandleRegistration">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="username">Username:</label>
        <InputText id="username" @bind-Value="_registerModel.Username" class="form-control" />
        <ValidationMessage For="@(() => _registerModel.Username)" />
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        <InputText id="email" @bind-Value="_registerModel.Email" class="form-control" />
        <ValidationMessage For="@(() => _registerModel.Email)" />
    </div>
    <div class="form-group">
        <label for="password">Password:</label>
        <InputText id="password" @bind-Value="_registerModel.Password" class="form-control" type="password" />
        <ValidationMessage For="@(() => _registerModel.Password)" />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</EditForm>